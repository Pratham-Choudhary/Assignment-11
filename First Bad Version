class Solution {
public:
    int firstBadVersion(int n) {
        long long int first,last,mid;
        first = 1 , last = n;
        long int r = 1;
        while(first<=last){
            mid = first + (last-first)/2;
            bool x = isBadVersion(mid);
            if(x == true){
                r = mid;
                last = mid-1;
            }
            else
                first = mid+1;
        }
        return r;
    }
};
